pipeline{
  agent any
  environment {
  PATH = "{$path}:${getTerraformPath()}"
}
def getTerraformPath(){
  tfHome = tool name: 'terraform 0.15', type: 'terraform'
  return tfHome
  }
stages{
  stage('terraform init'){
    steps{
      sh 'terraform init'
      sh 'terraform apply -auto-approve'
    }
  }
  }
  }
